___spec___SpecPrivateDirectory="$( cd "$(dirname "$0")" >/dev/null 2>&1 ; pwd -P )"
source "$___spec___SpecPrivateDirectory/specHarness.sh"
WORKING_DIRECTORY="$1"
SPEC_FILE="$2"
SPEC_NAME_PATTERN="$3"
spec.loadSpecHelpers "$1"
echo
echo "[$SPEC_FILE]"
set -e
source "$SPEC_FILE"
set +e
spec.runTests "$SPEC_NAME_PATTERN"